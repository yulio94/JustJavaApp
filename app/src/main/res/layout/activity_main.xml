<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <EditText
            android:id="@+id/client_name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:autofillHints="name"
            android:hint="@string/your_name"
            android:inputType="textCapWords"
            tools:ignore="LabelFor" />

        <TextView
            style="@style/HeaderTextSize"
            android:text="@string/toppins" />

        <CheckBox
            android:id="@+id/whipped_cream_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_checkBox"
            android:text="@string/text_whippedCream"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/chocolate_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_checkBox"
            android:text="@string/text_chocolate"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/cantidad"
            style="@style/HeaderTextSize"
            android:text="@string/text_cantidad" />

        <LinearLayout
            android:id="@+id/selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="53dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"

                android:onClick="decrement"
                android:text="@string/sing_minus"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/quantity_text_view"
                android:layout_width="53dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/first_number"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="53dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:onClick="increment"
                android:text="@string/sing_plus"
                android:textSize="20sp" />

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:onClick="submitOrder"
            android:text="@string/text_ordenar"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>